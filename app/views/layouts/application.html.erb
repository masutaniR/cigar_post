<!DOCTYPE html>
<html>
  <head>
    <title>CigarPost</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  </head>

  <body>
    <header class="border-bottom fixed-top">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <% if user_signed_in? %>
            <%= link_to 'CigarPost', timeline_path, class: 'navbar-brand text-info font-weight-bold' %>
          <% else %>
            <a class="navbar-brand text-info font-weight-bold" href="/">CigarPost</a>
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if admin_signed_in? %>
            <%= render 'layouts/admin_signed_in_nav' %>
          <% elsif user_signed_in? %>
            <%= render 'layouts/user_signed_in_nav' %>
          <% else %>
            <%= render 'layouts/before_signed_in_nav' %>
          <% end %>
        </div>
        </ul>
      </nav>
    </header>

    <% flash.each do |key, value| %>
      <% if key == 'notice' %>
        <p class="alert alert-success">
          <%= value %>
          <button class="close" type="button" data-dismiss="alert">&times;</button>
        </p>
      <% else %>
        <p class="alert alert-danger">
          <%= value %>
          <button class="close" type="button" data-dismiss="alert">&times;</button>
        </p>
      <% end %>
    <% end %>

    <%= yield %>

    <footer>
      <div class="d-flex justify-content-center mt-3">
        ©CigarPost
      </div>
      <div class="d-flex justify-content-end">
        <small class="admin_session">
          <%= link_to '管理者ログイン', new_admin_session_path %>
        </small>
      </div>
    </footer>

  </body>
</html>
