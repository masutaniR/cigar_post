<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto mt-2">
      <% if params[:user_id].present? %>
        <h3 class="mb-3"><%= @user.name %>さんの投稿一覧</h3>
      <% else %>
        <h3 class="mb-3">投稿一覧</h3>
      <% end %>

      <%= render 'admin/posts/index', posts: @posts %>

      <div class="paginate">
        <%= paginate @posts %>
      </div>

    </div>
  </div>
</div>