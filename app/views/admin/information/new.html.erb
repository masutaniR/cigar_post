<% provide(:title, 'お知らせ新規投稿') %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-sm-10 mx-auto mt-2">
      <h3 class="title">お知らせ新規投稿</h3>

      <%= render 'layouts/errors', obj: @information %>

      <%= form_with model: @information, url: admin_information_new_confirm_path, method: :get, local: true do |f| %>
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :body %>
        <%= f.text_area :body, rows: '5', class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit '確認画面へ', class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>