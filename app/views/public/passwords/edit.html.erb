<% provide(:title, 'パスワード再設定') %>
<div class="container">
  <div class="row mt-2">
    <div class="col-md-6 col-sm-10 mx-auto">
      <h2>パスワード再設定</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "新しいパスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "新しいパスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "パスワード再設定", class: 'btn btn-info' %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>

    </div>
  </div>
</div>