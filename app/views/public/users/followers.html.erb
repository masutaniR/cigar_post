<div class="container">
  <div class="row mt-2">
    <div class="col-md-4">
      <%= render 'public/users/info', user: @user %>
    </div>

    <div class="col-md-7 mx-auto">
      <h4><%= @user.name %>さんのフォロワー</h4>
      <% if @user.followers.count == 0 %>
        <p class="mt-4 text-muted">フォロワーはいません</p>
      <% else %>
        <div class="col-12 main-contents">
          <%= render 'public/users/index', users: @users %>
        </div>
      <% end %>

      <div class="paginate mt-3">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>