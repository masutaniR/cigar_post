<% if user_signed_in? && post.commented_by?(current_user) %>
  <%= link_to "/posts/#{post.id}#comment-form", class: 'plain-link' do %>
    <i class="fas fa-comment"></i> コメント <%= post.post_comments.count if post.post_comments.present? %>
  <% end %>
<% elsif user_signed_in? %>
  <%= link_to "/posts/#{post.id}#comment-form", class: 'plain-link' do %>
    <i class="far fa-comment"></i> コメント <%= post.post_comments.count if post.post_comments.present? %>
  <% end %>
<% else %>
  <i class="far fa-comment"></i> コメント <%= post.post_comments.count if post.post_comments.present? %>
<% end %>