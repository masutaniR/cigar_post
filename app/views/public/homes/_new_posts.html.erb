<table class="table">
  <thead>
    <tr>
      <th>投稿者</th>
      <th>カテゴリ</th>
      <th>本文</th>
    </tr>
  </thead>
  <tbody>
    <% new_posts.each do |post| %>
    <tr>
      <td>
        <%= attachment_image_tag(post.user, :profile_image, format: 'jpg', size: '40x40', fallback: 'no-img.jpeg', class: 'user-icon') %>
        <strong><%= post.user.name %></strong>
      </td>
      <td class="text-center">
        <%= render 'public/posts/category', post: post %>
      </td>
      <td>
        <%= new_line(post.body) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-end">
  <%= link_to ' 投稿一覧', posts_path, class: 'small fas fa-angle-double-right' %>
</div>